extends ../partials/layout.pug

block title 
    - var title = "PRODUK KAMI"

block content
    section.product 
        .container 
            h1.section-title MARI MENGENAL <br> PRODUK KAMI
            .products 
                each product, i in products
                    .product__card 
                        .product__card-image
                            img(src=baseURL + "assets/img/produk/alif" + (i + 1) + ".png" alt="Minyak Goreng Alif")
                        p.product__card-text= product
            .product1 
                img(src= baseURL + "assets/img/produk/produk1.png" alt="Minyak Goreng Alif" loading="lazy").product1__img
                table.product1__table
                    thead 
                        th(colspan=2) ALIF SPECT
                    tbody 
                        each pt in productTable
                            tr 
                                td= pt.td1
                                td= pt.td2
            .product2 
                img(src= baseURL + "assets/img/produk/produk2.png" alt="Minyak Goreng Alif" loading="lazy").product2__img
                ul.product2__list
                    each pl in productList
                        li.product2__item= pl


