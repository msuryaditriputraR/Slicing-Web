extends ../partials/layout.pug

block title 
    - var title = "Tracking"

block content 
    section.tracking
        .container 
            //  ========================= TRACKING INFO ========================== 
            .tracking__info 
                h1.tracking__info-title Informasi Pengiriman
                ul.tracking__info-list 
                    each ti, i in trackInfo
                        li.tracking__info-item 
                            =ti.left
                            if i == trackInfo.length - 1    
                                span.text--green=ti.right
                            else 
                                span=ti.right
            //  ========================= TRACKING DETAIL ========================== 
            .tracking__detail 
                h2.tracking__detail-title Details
                ul.tracking__detail-list 
                    each td in trackDetails
                        if td.isActive  
                            li.tracking__detail-item.active
                        else 
                            li.tracking__detail-item
                                =td.left 
                                span 
                                =td.right


