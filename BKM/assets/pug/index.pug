extends partials/layout.pug

block title 
    - var title = "PT BAHTERA Karunia Mandiri"

block content
    //  ========================= HOME ========================== 
    section.home 
        .container 
            .home__info 
                h1.home__title Ja<span>sa</span> Kepabeanan <br> Terpercaya
                p.home__desc Percayakan kepabeanan pengiriman expor & impor bisnis anda pada kami, PT. Bahtera Karunia Mandiri

                form(action="").home__form
                    label(for="#home-input").home__form-label Lacak Kiriman
                    .home__form-track
                        input.home__form-input(placeholder="01234****" type="number") 
                        button.home__form-btn(type="submit") Tracking
            .home__image 
                img(src=baseURL + "assets/img/banner1.png" alt="")

    //  ========================= SERVICE ========================== 
    section.service 
        .container 
            div 
                span.service__subtitle Layanan untuk Anda
                h2.service__title Kami menawarkan <br> Layanan terbaik
            .service__cards 
                each service, i in services
                    article.service__card 
                        .service__card-icon(class="border--" + service.color)
                            img(src=baseURL + "assets/img/icons/icon__service" + (i +1) + ".svg" alt="" aria-hidden="true")
                        div 
                            h3.service__card-title= service.title
                            p.service__card-desc= service.desc

    //  ========================= HOME ABOUT ========================== 
    section.home-about 
        .container 
            .home-about__image 
                img(src=baseURL + "assets/img/banner2.png" alt="")
            .home-about__info 
                h2.home-about__title  PT. Bahtera Karunia Mandiri
                p.home-about__desc Kami adalah perusahaaan berbasis Pengusaha Pengurusan Jasa Kepabeanan (PPJK) yang merupakan badan usaha yang melakukan kegiatan pengurusan kewajiban pabean untuk dan atas kegiatan Importir atau Eksportir dan telah terdaftar secara resmi dalam Direktorat Jenderal Bea dan Cukai (DJBC).
                a(href=baseURL + "pages/about.html").home-about__btn Tentang Kami 

    //  ========================= TEAMS ========================== 
    section.teams 
        .container 
            h2.teams__title Orang-Orang Hebat Dalam Perusahaan Kami!
            .teams__cards 
                each team in teams
                    article.teams__card
                        .teams__card-avatar     
                            img(src=baseURL + "assets/img/teams/" + team.name + ".png", alt=team.name)
                        h3.teams__card-name= team.name 
                        p.teams__card-job= team.job
                        .teams__card-icons 
                            .teams__card-icon
                                a(href="#" aria-label="telpon") 
                                    i.bx.bxs-phone
                            .teams__card-icon 
                                a(href="#" aria-label="email") 
                                    i.bx.bxs-envelope

    //  ========================= CLIENTS ========================== 
    section.clients 
        .container 
            h2.clients__title Klient & Mitra kami
            .clients__cards 
                each client in clients 
                    article.clients__card 
                        .clients__card-image
                            img(src=baseURL + "/assets/img/clients/" + client.name + ".png", alt=client.name)
                        h3.clients__card-name= client.name
                        p.clients__card-location= client.location